<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <div class="content">
        <header class="navbar text-white bg-dark">
            <img src="~/Content/Images/Logo.png" />
            <div class="navbar-brand mr-auto">
                <h2>Task</h2>
            </div>
            <div class="dropdown  d-sm-none d-block">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Review", "AddReview", "Review", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Test", "Test", "Home", null, new { @class = "dropdown-item" })
                </div>
            </div>
        </header>
        <main class="container-fluid">
            <div class="row">
                <div class="col-8">
                    @RenderBody()
                </div>
                <div class="col-4">
                    <div class="btn-group-vertical d-none d-sm-block">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-dark" })
                        @Html.ActionLink("Review", "AddReview", "Review", null, new { @class = "btn btn-dark" })
                        @Html.ActionLink("Test", "Test", "Home", null, new { @class = "btn btn-dark" })
                    </div>
                    <div class="d-none d-sm-block">

                        @RenderSection("Roll", false)

                    </div>
                </div>
            </div>
        </main>
    </div>
    <footer id="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-10"><h5>©Vlad Danshyn</h5></div>
                <div class="col-2"><a href="#">Top</a></div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery-1.10.2.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
</body>
</html>
