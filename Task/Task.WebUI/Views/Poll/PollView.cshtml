<style>
    #results{
        align-content:center;
        width:100%;
        padding:0;
    }
    #results .card{
        
        width:100%;
    }
</style>




<div>
    @using (Ajax.BeginForm("PollAdd", "Poll", new AjaxOptions { UpdateTargetId = "results" }))
    {
    <div class="container-fluid" id="results">
        
        <div class="card">
            <div class="card-header">
                <label>Do you like our site?</label>
            </div>
            <div class="card-body">
                @Html.RadioButton("poll", "Yes", true)
                <span>Yes</span> <br />
                @Html.RadioButton("poll", "So-so")
                <span>So-so</span> <br />
                @Html.RadioButton("poll", "No")
                <span>No</span> <br />
            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-dark" value="Send" />
            </div>
           
        </div>
        
    </div>
    }

</div>
@Scripts.Render("~/scripts/jquery-1.10.2.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")